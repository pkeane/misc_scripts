	$result = @mysql_query($sql,$connection) or die("no update cronjob");

  $sql = "
	SELECT week_id
	FROM week
	WHERE week_mon_date='$week_mon_date'
	";
	$result = @mysql_query($sql,$connection) or die("Couldn't execute query1.");
	$num = mysql_num_rows($result);
